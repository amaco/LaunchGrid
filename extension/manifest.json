{
    "manifest_version": 3,
    "name": "LaunchGrid Bridge",
    "version": "1.0",
    "description": "Connects LaunchGrid Dashboard to External Platforms safely.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "alarms"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*",
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "content-scripts/twitter.js"
            ]
        }
    ]
}